@model IEnumerable<NorthwindSystem.Data.Models.Category>

    @{
    ViewData["Title"] = "Index";
    }

    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Picture</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td><a asp-action="Edit" asp-route-productId=@category.Id>Edit</a></td>
            </tr>
        }
        </tbody>
    </table>

